.SectionCoonsulta
  text-align center
  /*background-image url('../../img/medicine_phixr.png')*/
  background-color: #64b5f6
  background-repeat no-repeat
  background-size cover
  background-position fixed
  padding-top 10em
  padding-bottom 3em
.FormularioConsulta
    background-color snow
    display inline-block
    padding 2em
    border-radius 0.7em
    box-shadow 0.4em 0.4em #90CAF9
    width 50em
    /*background-image url('../../img/medicine_phixr.png')*/
    background-repeat no-repeat
    background-position center
    background-size cover
    color Snow
    text-align center
    &-input
      margin-bottom 1em
      border-radius 1em
    &-tittle
      color black
      padding-bottom: .5em
      border-bottom: 2px solid #448AFF
      margin-bottom: 1em

@media (min-width: 464px) and (max-width: 733px)
  .FormularioConsulta
    width 30em
  .FormConsultaFirst-container
    margin 0 0.5em

@media screen and (max-width: 463px)
  .FormularioConsulta
    width auto
    padding 1.5em
    &-tittle
      font-size 26px
  .FormConsultaFirst-container
    margin 0 0.5em

