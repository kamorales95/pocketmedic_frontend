  /*background-image url('../../img/medicine_phixr.png')*/
  background-color: #BBDEFB
  background-repeat no-repeat
  background-size cover
  background-position fixed
  padding 10em
.FormConsulta
    background-color snow
    display inline-block
    padding 2em
    border-radius 0.7em
    box-shadow 0.4em 0.4em #90CAF9
    width 50em
    /*background-image url('../../img/medicine_phixr.png')*/
    background-repeat no-repeat
    background-position center
    background-size cover
    color Snow
    text-align center
    &-input
      margin-bottom 1em
      border-radius 1em
    &-tittle
      color black
      padding-bottom: .5em
      border-bottom: 2px solid #448AFF
      margin-bottom: 1em

